<%- include('partials/header') -%>
<body>
<%- include('partials/navbar') -%>
<div class="container">
    <hr>
   <h1><%= question.title %></h1>
    <p><%= question.description %></p>
    <hr>

    <form method="post" action="/answer">
        <h3>Answer</h3>
        <textarea placeholder="type your answer" class="form-control input-gray" name="answer"></textarea>
        <br>
        <input type="hidden" name="questionId" value="<%= question.id%>">
        <button type="submit" class="btn btn-sky">Send answer</button>
    </form>
    <hr>
    <h3>Answers</h3>
    <% answers.forEach(answear => { %>
    <br>
    <div class="card">
        <div class="card-body">
          <p><%= answear.body%></p>
        </div>
    </div>

    <%})%>
</div>
</body>
<%- include('partials/footer') -%>
</html>